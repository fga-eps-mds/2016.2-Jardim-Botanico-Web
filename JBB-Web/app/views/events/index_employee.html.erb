<p id="notice"><%= notice %></p>
<body id="page-top">
  <head>
    <link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="css/creative.css" rel="stylesheet">
  </head>
  <body id="aplication-body">
    <section id="services">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading"><%= t(:event_information) %></h2>
            <hr class="primary">
          </div>
        </div>
      </div>
  <div class="col-md-6 col-md-offset-3">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class = "actions">
          <b><%= t(:user_info) %></b>
          <td><%= link_to @event.user.name, "/#{I18n.locale}/events/user_information?id=#{@event.id}" %></td>
        </div>
        <br>
        <b><%= t(:date_time_start) %></b>
        <div class = "actions">
          <b><%= t(:date_schedule) %></b>
          <%= l(@event.date_start, format: :long) %>
        </div>
        <div class = "actions">
          <b><%= t(:time_schedule) %></b>
          <%= l(@event.time_start, format: :time_only) %>
        </div>
        <br>
        <b><%= t(:date_time_end) %></b>
        <div class = "actions">
          <b><%= t(:date_schedule) %></b>
          <%= l(@event.date_end, format: :long) %>
        </div>
        <div class = "actions">
          <b><%= t(:time_schedule) %></b>
          <%= l(@event.time_end, format: :time_only) %>
        </div>
        <br>
        <div class = "actions">
          <b><%= t(:status) %></b>
          <%= @event.status %>
        </div>
        <br>
        <div class = "actions" >
          <b><%= t(:space_request) %></b>
          <%= @event.jbb_space_requested%>
        </div>
        <br>
        <div class = "actions" >
          <b><%= t(:number_visitors) %></b>
          <%= @event.estimated_public%>
        </div>
        <br>
        <div class= "actions spacing" >
          <b><%= t(:description) %></b>
          <%= @event.description %>
        </div>
        <br>
        <table>
          <tr>
            <td>
              <div class = "actions" >
                <b><%= t(:need_eletricity) %></b>
                <%= @event.need_eletricity%>
              </div>
            </td>
            <td>
              <div class = "actions" >
                &nbsp&nbsp&nbsp&nbsp
                <b><%= t(:need_water) %></b>
                <%= @event.need_water%>
              </div>
            </td>
          </tr>
        </table>
        <br>
        <div class= "actions sp" >
          <b><%= t(:other_informations) %></b>
          <%= @event.other_informations %>
        </div>
        <br>
        <div class= "actions spacing" >
          <b><%= t(:name_institute) %></b>
          <%= @event.name_institute %>
        </div>
        <div class= "actions spacing" >
          <b><%= t(:institute_address) %></b>
          <%= @event.institute_address %>
        </div>
        <div class= "actions spacing" >
          <b><%= t(:institute_cnpj) %></b>
          <%= @event.institute_cnpj %>
        </div><br>
        <br>
          <div class="actions">
              <%= link_to t(:back), "/#{I18n.locale}"+show_event_employee_path, :required => true, class: "btn btn-primary"%>
              <% if (@event.status <=> "Aguardando analise") == 0 %>
                  <%= link_to t(:accept_event), "/#{I18n.locale}"+get_accept_event_employee_path(:id => @event.id), class: "btn btn-primary" %>
                  <%= link_to t(:refuse_event), "/#{I18n.locale}"+get_refuse_event_employee_path(:id => @event.id), class: "btn btn-warning destroy-btn" %>
              <%end%>
              <%if (@event.status <=> "Agendado") == 0%>
                 <%= link_to t(:cancel_event), "/#{I18n.locale}"+get_cancel_event_employee_path(:id => @event.id), class: "btn btn-warning destroy-btn" %>
              <%end%>
              <% if (@event.status <=> "Cancelado por funcionario") == 0 ||
                  (@event.status <=> "Cancelado pelo usuario") == 0 ||
                  (@event.status <=> "Recusado por funcionario") == 0 %>
                  <%= link_to t(:delete_event), "/#{I18n.locale}"+get_delete_event_employee_path(:id => @event.id), class: "btn btn-warning destroy-btn" %>
              <%end%>
          </div>
        </div>
      </div>
    </div>
  </body>
