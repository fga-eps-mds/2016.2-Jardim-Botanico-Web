<body id="aplication-body">
  <header>
    <div class="header-content">
      <div class="header-content-inner">
        <h1 id="HomeHeanding"> <%=t(:welcome_to_jbb)%></h1>
        <hr>
        <p><b><font color ="white"><%=t(:jbb)%></font></b></p>
			<a href="#about" class="btn btn-primary btn-xl page-scroll"><%=t(:know_more)%></a>
      </div>
    </div>
  </header>
  <section class="bg-primary" id="about">
    <div class="container">
      <div class="row">
        <div class ="col-lg-8 col-lg-offset-2 text-center">
          <h2 class="section-heading"><%=t(:know_trails)%></h2>
          <hr class="light">
          <p class="text-faded"><%=t(:know_trails2)%></p>
          <a href ="/<%= @language %>/maps/jbb_map/" class="page-scroll btn btn-default btn-xl sr-button"><%=t(:where_walk)%></a>
        </div>
      </div>
    </div>
  </section>
  <aside class="bg-dark">
  <div class="container text-center">
      <div class="call-to-action">
        <h2><%=t(:appointment_book)%></h2>
      </div>
      <a  id="calendar_index" href="/<%= @language %>/events/index_calendar_month" class="fa fa-calendar fa-3x sr-icons event"> <h4><b><font color ="white"><%=t(:event)%></font></b></h4></a>
      <a  id="calendar_index" href="/<%= @language %>/visitations/index_calendar_month" class="fa fa-calendar-o fa-3x sr-icons education"> <h4><b><font color ="white"><%=t(:visit)%></font></b></h4> </a>
    </div>
  </aside>
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%=t(:slogan)%></h2>
          <hr class="primary">
        </div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
              <% if current_user %>
                <% if current_user.is_employee %>
                  <a href="/<%= @language %>/visitations/show_employee">
                  <% else %>
                  <a href="/<%= @language %>/visitations/new">
                  <% end%>
              <% else %>
                <a href="/<%= @language %>/sign_in">
            <% end %>
            <img src="/assets/portfolio/fullsize/tree-shape.png" class="img-responsive" alt="" style="width: 80px;height: 65px;     margin-left: 85px;">
            <% if current_user %>
             <% if current_user.is_employee %>
             <h3><%=t(:manage_visit)%></h3>
            <p class="text-muted"><%=t(:manage_visit2)%></p>
             <% else %>
            <h3><%=t(:make_visit)%></h3>
            <p class="text-muted"><%=t(:make_visit2)%></p>
            <% end%>
            <% else %>
            <h3 id="visitation_id"><%=t(:make_visit)%></h3>
            <p class="text-muted"><%=t(:make_visit2)%></p>
            <% end%>
          </div>
        </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
                <% if current_user %>
                  <% if current_user.is_employee %>
                  <a href="/<%= @language %>/events/show_employee">
                  <% else %>
                  <a href="/<%= @language %>/events/new">
                  <% end%>
                <% else %>
                  <a href="/<%= @language %>/sign_in">
              <% end %>
          <i class="fa fa-4x fa-users text-primary sr-icons"></i>
          <% if current_user %>
             <% if current_user.is_employee %>
             <h3><%=t(:manage_event)%></h3>
            <p class="text-muted"><%=t(:manage_event2)%></p>
             <% else %>
            <h3 id="event_current_user_id"><%=t(:make_event)%></h3>
            <p class="text-muted"><%=t(:make_event2)%></p>
            <% end%>
            <% else %>
            <h3 id="event_id"><%=t(:make_event)%></h3>
            <p class="text-muted"><%=t(:make_event2)%></p>
            <% end%>
        </div>
      </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <a href="/<%= @language %>/education_choice/">
            <img src="/assets/portfolio/fullsize/tree-shape.png" class="img-responsive" alt="" style="width: 80px;height: 65px;     margin-left: 85px;">
            <h3><%=t(:education)%></h3>
            <p class="text-muted"><%=t(:education2)%></p>
          </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <a href="/<%= @language %>/maps/jbb_map/">
          <i class="fa fa-4x fa-map-signs text-primary sr-icons"></i>
          <h3 id="maps_id"><%=t(:spaces)%></h3>
          <a href="/<%= @language %>/maps/jbb_map/">
          <p class="text-muted"><%=t(:all_spaces)%></p>
        </div>
      </div>
    </div>
  </div>
</section>
